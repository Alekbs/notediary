<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация по Email"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <!-- Поле для ввода Email -->
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/edit_text_bg" />

    <!-- Текст, объясняющий, что на email придут логин и пароль -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="На указанный адрес будет отправлен логин и пароль для входа ребенка."
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"/>

    <!-- Кнопка для отправки Email -->
    <Button
        android:id="@+id/buttonNextToConstent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"
        android:padding="12dp" />

</LinearLayout>
