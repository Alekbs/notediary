<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextFatherName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ФИО отца"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextFatherPassport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Паспортные данные"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextFatherAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Адрес проживания"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextFatherWorkplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Место работы"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editTextFatherContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Контактные данные"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonNextToChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Далее" />
</LinearLayout>
